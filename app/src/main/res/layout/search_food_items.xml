<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tVAdapterFoodNume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aliment_Nume"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="@color/black"
            ></TextView>

        <Button
            android:id="@+id/add_button_food"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_icon_dark">

        </Button>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tVAdapterFoodProteine"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="300 Proteine"
            android:textAlignment="textEnd"
        ></TextView>
        <TextView
            android:id="@+id/tVAdapterFoodLipide"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="400 Lipide"
            android:textAlignment="textEnd"
            ></TextView>
        <TextView
            android:id="@+id/tVAdapterFoodCarbohidrati"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="120 Carbohidrati"
            android:textAlignment="textEnd"
            ></TextView>
        <TextView

            android:layout_marginRight="10dp"
            android:id="@+id/tVAdapterFoodCalorii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="700 Calorii"
            android:textAlignment="textEnd"
            android:textSize="15dp"></TextView>

    </LinearLayout>


</LinearLayout>