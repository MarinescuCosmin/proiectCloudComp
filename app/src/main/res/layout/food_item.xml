<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/nume_aliment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:text="Mancare cu denumire lungaaaaaaaaaaaaaaaaaaaa" />

        <TextView
            android:id="@+id/calorii_aliment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"


            android:text="1700 Calorii"
            android:fontFamily="@font/baloo"
            android:textAlignment="textEnd"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/proteine_aliment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="232 Proteine"

            android:fontFamily="@font/baloo"
            android:textAlignment="textEnd"></TextView>

        <TextView
            android:id="@+id/grasimi_aliment"
            android:layout_width="140dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            android:text="232 Grasimi"
            android:fontFamily="@font/baloo"
            android:textAlignment="center"></TextView>

        <TextView
            android:textAlignment="textEnd"
            android:id="@+id/carbohidrati_aliment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColorHighlight="@color/white"
            android:fontFamily="@font/baloo"
            android:textColor="@color/white"
            android:text="232 Carbohidrati"></TextView>
    </LinearLayout>
</LinearLayout>